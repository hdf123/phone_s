/* pages/search/search.wxss */
.headers{
  height:88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:0 30rpx;
  background:white;
}
.headers>view:nth-child(1){
  width: 614rpx;
	height: 56rpx;
	background-color: #f5f5f5;
	border-radius: 4rpx;
  display: flex;
}
.headers input{
  width:570rpx;
  height:100%;
  color:#333;
  font-size:24rpx;
  padding:0 10rpx;
}
.headers .icon-sousuo1{
  width:44rpx;
  height:100%;
  color:#999999;
  font-size:24rpx;
  display:flex;
  align-items: center;
  justify-content:flex-end;
}
.search{
  color:#999999;
  font-size: 24rpx;
}
.headers>view:nth-child(2){
  color: #333333;
  font-size: 28rpx;
}
.contents{
  top:88rpx;
  bottom:0;
  
}


.contents_box{
  display:none;
}
.contents_box>view:nth-child(1){
  height:72rpx;
  padding:20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.contents_box>view:nth-child(1)>view:nth-child(1){
  color:#999999;
  font-size: 24rpx;
}
.contents_box>view:nth-child(1)>view:nth-child(2){
  font-size: 26rpx;
}
.contents_box>view:nth-child(2){
  position:absolute;
  top:72rpx;
  left:30rpx;
  right:0;
  bottom:0;
  overflow: auto;
}
.contents_box>view:nth-child(2)>view{
  width:100%;
  height:88rpx;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
  border-bottom:1px solid #E5E5E5;
}









.without{
  width:100%;
  height:100%;
}
.without>view{
  text-align: center;
  position:absolute;
  top:40%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.without>view>image{
  width:200rpx;
  height:200rpx;
  display:inline-block;
}
.without>view>text{
  color: #666666;
  font-size: 28rpx;
  display:block;
  margin-top:39rpx;
}

.show{
  display:block;
}
.hide{
  display:none;
}
